<div class = "container">
    <div class="wrapper">
        <form  method="post" name="Login_Form" class="form-signin">
            <h3 class="form-signin-heading">Bienvenido a tus libros</h3>
            <hr class="colorgraph"><br>

          {{input type="text" class="form-control" name="idUsuario"  id="idUsuario" placeholder="Ingrese usuario" value=model.idUsuario}}
          {{input type="password" class="form-control" name="password" id="password" placeholder="Password" value=model.password}}

            <button class="btn btn-lg btn-primary btn-block"  name="Submit" value="Login" type="Submit" {{action "login"}}>Ingresar</button>
        </form>
    </div>
</div>

{{outlet}}
